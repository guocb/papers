\ProvidesPackage{beamerthemeRadio} 
\mode<presentation>

%%
\definecolor{white}{rgb}{1, 1, 1}
\definecolor{gray}{rgb}{100, 100, 100}

\definecolor{dblue}{RGB}{0,67,89}
\definecolor{blue}{RGB}{76,123,138}
\definecolor{lblue}{RGB}{204,217,222}
%%
\setbeamercolor{headline}{fg=black,bg=white}
\setbeamercolor{separation line}{bg=black}

%%
\setbeamercolor{title in headline}{fg=black}
\setbeamercolor{author in headline}{fg=black}
\setbeamercolor{institute in headline}{fg=black}

\setbeamercolor{block title}{fg=white, bg=dblue}
\setbeamercolor{block body}{fg=black, bg=lblue}

%%
\setbeamertemplate{headline}{  
  \leavevmode

  \begin{beamercolorbox}[wd=\paperwidth]{headline}
    \begin{columns}[T]
      \begin{column}{.6\paperwidth}
        \vskip4ex
        \raggedleft
        \usebeamercolor{title in headline}{\color{fg}\textbf{\LARGE{\inserttitle}}\\[1ex]}
        \usebeamercolor{author in headline}{\color{fg}\large{\insertauthor}\\[1ex]}
        \usebeamercolor{institute in headline}{\color{fg}\large{\insertinstitute}\\[1ex]}     
      \end{column}
      \begin{column}{.4\paperwidth}
      \centering
        \vskip4ex
        \includegraphics[width=\linewidth]{figures/radio-2015.jpg}
      \end{column}
    \end{columns}
    \vskip2ex
  \end{beamercolorbox}

  \begin{beamercolorbox}[wd=\paperwidth]{separation line}
    \rule{0pt}{3pt}
  \end{beamercolorbox}
}

%%
